    "sqlAdminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "SQL Server admin password"
      }
    },
    "openAIApiKey": {
      "type": "securestring",
      "defaultValue": "",
      "metadata": {
        "description": "OpenAI API key"
      }
    },
    "auth0Domain": {
      "type": "securestring",
      "defaultValue": "",
      "metadata": {
