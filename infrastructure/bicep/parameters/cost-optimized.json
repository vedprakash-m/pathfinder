{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "appName": {
            "value": "pathfinder-lite"
        },
        "environment": {
            "value": "production"
        },
        "enableRedis": {
            "value": false
        },
        "enableCosmosDb": {
            "value": false
        },
        "enableApplicationInsights": {
            "value": true
        },
        "enableKeyVault": {
            "value": false
        },
        "resourceLevel": {
            "value": "minimal"
        },
        "databaseTier": {
            "value": "Basic"
        },
        "databaseCapacity": {
            "value": 5
        },
        "autoScaling": {
            "value": {
                "minReplicas": 0,
                "maxReplicas": 2,
                "concurrentRequests": 50
            }
        }
    }
}
